@page "{id:int}"
@model ProjektApp.Pages.Projects.DeleteModel

<h2>Ta bort projekt</h2>

<form method="post">
    <input type="hidden" asp-for="Project.Id" />
    <p>Är du säker på att du vill ta bort <strong>@Model.Project.Title</strong>?</p>
    <button type="submit" class="btn btn-danger">Ja, ta bort</button>
    <a asp-page="Index" class="btn btn-secondary">Avbryt</a>
</form>
